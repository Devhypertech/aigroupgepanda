FROM node:20-alpine

# Enable corepack for npm version management
RUN corepack enable && corepack prepare npm@10.2.0 --activate

# Set working directory
WORKDIR /app

# Copy package files first for better layer caching
COPY package.json package-lock.json ./
COPY apps/api/package.json ./apps/api/
COPY apps/web/package.json ./apps/web/
COPY packages/shared/package.json ./packages/shared/

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Clean any existing builds
RUN rm -rf apps/web/.next packages/shared/dist

# Build shared package first (required for web build)
RUN npm run build:shared

# Verify shared package build
RUN test -f packages/shared/dist/index.js && \
    test -f packages/shared/dist/socketEvents.js && \
    echo "✓ Shared package built successfully" || \
    (echo "✗ Shared package build failed" && exit 1)

# Build web app from root (using workspace command)
RUN npm -w @gepanda/web run build

# Verify web build output
RUN test -f apps/web/.next/BUILD_ID && \
    echo "✓ Web app built successfully" || \
    (echo "✗ Web app build failed" && exit 1)

# Expose port
EXPOSE ${PORT:-3000}

# Start the web server (run from apps/web directory)
WORKDIR /app/apps/web
ENV PORT=${PORT:-3000}
ENV HOSTNAME="0.0.0.0"
ENV NODE_ENV=production
CMD ["npx", "next", "start"]

