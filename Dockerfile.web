FROM node:20-alpine AS builder

# Enable corepack for npm version management
RUN corepack enable && corepack prepare npm@10.2.0 --activate

WORKDIR /app

# Copy workspace manifests first for better layer caching
COPY package.json package-lock.json ./
COPY apps/web/package.json ./apps/web/
COPY packages/shared/package.json ./packages/shared/
COPY apps/api/package.json ./apps/api/

# Install dependencies using npm ci (workspace-aware)
RUN npm ci

# Copy full repo source code
COPY . .

# Build shared package first (required for web build)
RUN npm run build:shared

# Verify shared package build
RUN test -f packages/shared/dist/index.js && \
    test -f packages/shared/dist/socketEvents.js && \
    test -f packages/shared/dist/socketEvents.d.ts && \
    echo "✓ Shared package built successfully" || \
    (echo "✗ Shared package build failed" && exit 1)

# Build web app
RUN npm -w @gepanda/web run build

# Verify web build output exists
RUN test -f apps/web/.next/BUILD_ID && \
    echo "✓ Web app built successfully" || \
    (echo "✗ Web app build failed" && exit 1)

# Production stage
FROM node:20-alpine AS runner

# Enable corepack for npm version management
RUN corepack enable && corepack prepare npm@10.2.0 --activate

WORKDIR /app
ENV NODE_ENV=production

# Copy package files for workspace structure
COPY package.json package-lock.json ./
COPY apps/web/package.json ./apps/web/
COPY packages/shared/package.json ./packages/shared/

# Install only production dependencies (workspace-aware)
RUN npm ci --omit=dev

# Copy built shared package
COPY --from=builder /app/packages/shared/dist ./packages/shared/dist

# Copy built Next.js output (including .next/BUILD_ID)
COPY --from=builder /app/apps/web/.next ./apps/web/.next
COPY --from=builder /app/apps/web/public ./apps/web/public
COPY --from=builder /app/apps/web/next.config.js ./apps/web/next.config.js
COPY --from=builder /app/apps/web/package.json ./apps/web/package.json

# Verify .next/BUILD_ID exists in runner stage
RUN test -f apps/web/.next/BUILD_ID && \
    echo "✓ .next/BUILD_ID verified in runner stage" || \
    (echo "✗ .next/BUILD_ID missing in runner stage" && exit 1)

WORKDIR /app/apps/web
EXPOSE ${PORT:-3000}
ENV PORT=${PORT:-3000}
ENV HOSTNAME="0.0.0.0"

CMD ["npm", "-w", "@gepanda/web", "run", "start"]
