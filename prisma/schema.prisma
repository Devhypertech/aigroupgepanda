// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Room {
  id        String   @id @default(uuid())
  roomId    String   @unique // The room identifier used in the app
  template  String   // RoomTemplate enum value
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  members     RoomMember[]
  messages    Message[]
  inviteLinks InviteLink[]
  tripContext TripContext?

  @@map("rooms")
}

model TripContext {
  id        String   @id @default(uuid())
  roomId    String   @unique
  data      Json     // JSON data for trip context
  updatedAt DateTime @updatedAt

  room Room @relation(fields: [roomId], references: [roomId], onDelete: Cascade)

  @@map("trip_contexts")
}

model InviteLink {
  id        String    @id @default(uuid())
  token     String    @unique
  roomId    String
  createdAt DateTime  @default(now())
  expiresAt DateTime?

  room Room @relation(fields: [roomId], references: [roomId], onDelete: Cascade)

  @@index([token])
  @@map("invite_links")
}

model RoomMember {
  id        String   @id @default(uuid())
  roomId    String
  userId    String
  username  String
  joinedAt DateTime @default(now())

  room Room @relation(fields: [roomId], references: [roomId], onDelete: Cascade)

  @@unique([roomId, userId])
  @@map("room_members")
}

model Message {
  id        String   @id @default(uuid())
  roomId    String
  userId    String
  username  String
  text      String
  kind      String   // "USER" | "AI"
  createdAt DateTime @default(now())
  editedAt  DateTime?
  deletedAt DateTime?
  isDeleted Boolean  @default(false)

  room      Room            @relation(fields: [roomId], references: [roomId], onDelete: Cascade)
  reactions MessageReaction[]

  @@index([roomId, createdAt])
  @@index([roomId, isDeleted, createdAt])
  @@map("messages")
}

model MessageReaction {
  id        String   @id @default(uuid())
  messageId String
  userId    String
  username  String
  emoji     String
  createdAt DateTime @default(now())

  message Message @relation(fields: [messageId], references: [id], onDelete: Cascade)

  @@unique([messageId, userId, emoji])
  @@index([messageId])
  @@map("message_reactions")
}

